@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "_AuthLayout";

    var email = (string?)ViewBag.Email ?? "";
    var token = (string?)ViewBag.Token ?? "";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Auth/ResetPassword.css" asp-append-version="true" />
}

<div class="auth-card">
    <div class="auth-brand">
        <div class="auth-logo">HH</div>
        <div>
            <h1>Đặt lại mật khẩu</h1>
            <p class="muted">Nhập mật khẩu mới để hoàn tất.</p>
        </div>
    </div>

    @if (TempData["ResetPasswordError"] is not null)
    {
        <div class="alert alert-error">@TempData["ResetPasswordError"]</div>
    }

    <form asp-controller="Auth" asp-action="ResetPassword" method="post" class="auth-form" novalidate>
        @Html.AntiForgeryToken()

        <input type="hidden" name="email" value="@email" />
        <input type="hidden" name="token" value="@token" />

        <div class="form-row">
            <label for="newPassword">Mật khẩu mới</label>
            <input id="newPassword" name="newPassword" type="password" autocomplete="new-password" required
                minlength="6" />
            <div class="hint">Tối thiểu 6 ký tự.</div>
        </div>

        <div class="form-row">
            <label for="confirmPassword">Nhập lại mật khẩu</label>
            <input id="confirmPassword" type="password" autocomplete="new-password" required minlength="6" />
        </div>

        <div id="clientError" class="alert alert-error" style="display:none;"></div>

        <button type="submit" class="btn-primary w-full" id="submitBtn">Cập nhật mật khẩu</button>

        <div class="auth-links">
            <a asp-controller="Auth" asp-action="Login">Quay lại đăng nhập</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/Auth/ResetPassword.js" asp-append-version="true"></script>
}