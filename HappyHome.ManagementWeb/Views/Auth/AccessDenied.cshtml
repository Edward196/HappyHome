@{
    ViewData["Title"] = "Access denied";
    Layout = "_AuthLayout";
}

<div class="auth-card">
    <div class="auth-brand">
        <div class="auth-logo">!</div>
        <div>
            <h1>Không có quyền truy cập</h1>
            <p class="muted">Tài khoản của bạn không được phép mở trang này.</p>
        </div>
    </div>

    <div class="auth-actions">
        <a class="btn-secondary w-full" asp-controller="Home" asp-action="Index">Về trang chủ</a>
        <form asp-controller="Auth" asp-action="Logout" method="post" class="w-full">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn-danger w-full">Đăng xuất</button>
        </form>
    </div>
</div>