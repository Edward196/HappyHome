            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildPublicWeb",
            "program": "${workspaceFolder}/HappyHome.PublicWeb/bin/Debug/net8.0/HappyHome.PublicWeb.dll",
            "args": [],
